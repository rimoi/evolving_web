{% extends 'admin.html.twig' %}

{% block title %}Règle de cluster{% endblock %}

{% block content %}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Règles</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">Dashboard</a></li>
                        <li class="breadcrumb-item active">{{ block('title') }}</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">{{ block('title') }}</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="my-3 text-right">
                            <a href="{{ path('admin_cluster_rule_new') }}" class="btn-sm btn-primary mr-1">Nouvelle règle</a>
                        </div>
                        <table class="table table-responsive">
                            <thead>
                            <tr>
                                <th>Nom du cluster</th>
                                <th>final_CP/B2C_min</th>
                                <th>final_CP/B2C</th>
                                <th>final_CP/B2C_max</th>
                                <th>final_BP/B2C_max</th>
                                <th>final_BP/B2C_min</th>
                                <th>final_BP/B2C</th>
                                <th>actions</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for cluster_rule in cluster_rules %}

                                <tr>
                                    <td>{{ cluster_rule.cluster }}</td>
                                    <td>{{ cluster_rule.finalCpB2cMin }}</td>
                                    <td>{{ cluster_rule.finalCpB2c }}</td>
                                    <td>{{ cluster_rule.finalBpB2cMax }}</td>
                                    <td>{{ cluster_rule.finalCpB2CMax }}</td>
                                    <td>{{ cluster_rule.finalBpB2cMin }}</td>
                                    <td>{{ cluster_rule.finalBpB2c }}</td>
                                    <td class="text-right py-0 align-middle">
                                        <div class="btn-group btn-group-sm">
{#                                            <a href="{{ path('admin_cluster_rule_show', {'cluster': cluster_rule.cluster}) }}" class="btn btn-info">#}
{#                                                <i class="fas fa-eye"></i> Voir#}
{#                                            </a>#}
{#                                            &nbsp;#}
                                            <a href="{{ path('admin_cluster_rule_edit', {'cluster': cluster_rule.cluster}) }}" class="btn btn-success">
                                                <i class="fas fa-edit"></i> Modifier
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="8">Pas de règle disponible !</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
